<time class="c-timestamp {{ modifier_class }} {{ c_timestamp_classes }}"
	datetime="{{ c_timestamp_datetime_attr }}"
	{% if c_timestamp_aria_label_attr %}
		aria-label="{{ c_timestamp_aria_label_attr }}"
	{% endif %}
	>
	{{ c_timestamp_text }}
	{% if c_timestamp_markup %}
		{{ c_timestamp_markup|raw }}
	{% endif %}

</time>
