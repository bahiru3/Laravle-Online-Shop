<label class="c-input" for="{{ c_input_id_attr }}">
	<span class="{{ c_input_label_class }}">{{ c_input_label_text }}</span>
	<input
		id="{{ c_input_id_attr }}"
		type="{{ c_input_type_attr }}"
		class="{{ c_input_class }}"
		name="{{ c_input_id_attr }}"
		placeholder="{{ c_input_placeholder_attr }}"
		aria-invalid="{{ c_input_aria_invalid_attr }}"
		data-error="{{ c_input_error_attr }}"
		size="{{ c_input_size_attr }}"
		maxlength="{{ c_input_maxlength_attr }}"
	/>
</label>
