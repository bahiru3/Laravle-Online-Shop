<div class="story-grid lrv-u-padding-tb-1 lrv-u-padding-tb-2@desktop // {{ story_grid_classes }}">

	{% if o_header %}
		{% include "@larva/objects/o-header/o-header.twig" with o_header %}
	{% endif %}

	<ul class="{{ story_grid_grid_classes }} // lrv-a-unstyle-list lrv-u-margin-b-050">
		{% for item in story_grid_story_cards %}
			<li class="{{ story_grid_grid_item_classes }}">
				{% include "@larva/modules/story/story.twig" with item %}
			</li>
		{% endfor %}
	</ul>
	{% if c_span %}
		{% include "@larva/components/c-span/c-span.twig" with c_span %}
	{% endif %}
</div>
