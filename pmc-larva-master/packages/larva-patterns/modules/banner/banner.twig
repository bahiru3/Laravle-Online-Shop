<div class="banner // {{ banner_classes }}">

	{% if c_lazy_image %}
		<div class="banner__img // {{ banner_img_outer_classes }}">
			{% include "@larva/components/c-lazy-image/c-lazy-image.twig" with c_lazy_image %}
		</div>
	{% endif %}

	{% if c_tagline %}
		<div class="banner__text // {{ banner_text_outer_classes }}">
			{% include "@larva/components/c-tagline/c-tagline.twig" with c_tagline %}
		</div>
	{% endif %}

	{% if screen_reader_text %}
		<span class="lrv-a-screen-reader-only">{{ screen_reader_text }}</span>
	{% endif %}
</div>
